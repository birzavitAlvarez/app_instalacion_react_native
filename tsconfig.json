{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "allowJs": true,              
    "checkJs": false,             
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",                    
    "**/*.jsx"
  ],
  "exclude": ["**/node_modules", "**/Pods"]
}
